<div class="backdrop"></div>
<header class="main-header">
  <button id="side-menu-toggle">Menu</button>
  <nav class="main-header__nav">
    <ul class="main-header__item-list">
      <li class="main-header__item">
        <a class="<%= path === '/' ? 'active' : '' %>" href="/">Home</a>
      </li>

      <!-- BELOW NEEDS TO BE DELETED IN FINAL VERSION -->
      <!-- <li class="main-header__item"> -->
        <!-- <a class="<%= path === '/calendar' ? 'active' : '' %>" href="/calendar">Calendar</a> -->
      <!-- </li> -->
      <!-- ABOVE NEEDS TO BE DELETED IN FINAL VERSION -->

      <% if (isAuthenticated) { %>
      <li class="main-header__item">
        <a class="<%= path === '/calendar' ? 'active' : '' %>" href="/calendar">Calendar</a>
      </li>
      <li class="main-header__item">
        <a class="<%= path === '/events' ? 'active' : '' %>" href="/events">Events</a>
      </li>
      <% } %>
    </ul>
    <ul class="main-header__item-list">
      <% if (!isAuthenticated) { %>
      <li class="main-header__item">
        <a class="<%= path === '/login' ? 'active' : '' %>" href="/login">Login</a>
      </li>
      <li class="main-header__item">
        <a class="<%= path === '/signup' ? 'active' : '' %>" href="/signup">Signup</a>
      </li>
      <% } else { %>
      <li class="main-header__item">
        <form action="/logout" method="post">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <button type="submit">Logout</button>
        </form>
      </li>
      <% } %>
    </ul>
  </nav>
</header>